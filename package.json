{
  "name": "fit_home_api",
  "version": "1.0.0",
  "description": "Project for plan your own physical exercise schedule at home and help you to perform the exercises at the correct time.",
  "main": "index.js",
  "scripts": {
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down --remove-orphans",
    "up:dev": "npm run build:dev && docker-compose -f docker-compose.dev.yml up -d && npm run build:dev:watch",
    "down:dev": "docker-compose -f docker-compose.dev.yml down --remove-orphans",
    "build": "rimraf dist && tsc -p tsconfig.production.json",
    "build:watch": "chokidar './src/**/*.ts' -c 'if [ '{event}' = 'unlink' ]; then rimraf dist/** && tsc -p tsconfig.production.json; else tsc -p tsconfig.production.json; fi' --silent",
    "build:dev": "rimraf dist && tsc -p tsconfig.development.json",
    "build:dev:watch": "chokidar './src/**/*.ts' -c 'if [ '{event}' = 'unlink' ]; then rimraf dist/** && tsc -p tsconfig.development.json; else tsc -p tsconfig.development.json; fi' --silent",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "api:terminal": "docker exec -it api-container /bin/bash",
    "mongo:terminal": "docker exec -it mongo-container /bin/bash",
    "test": "docker exec -t api-container npx jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "docker exec -t api-container npx jest --passWithNoTests --runInBand",
    "test:unit": "npm run test -- --watchAll -c jest-unit-config.js",
    "test:integration": "npm run test -- --watchAll -c jest-integration-config.js",
    "test:staged": "npm run test --findRelatedTests",
    "test:ci": "npm run test -- --coverage"
  },
  "keywords": [],
  "author": "Felipe Vahia Malliagros",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.15.5",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.9.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "rimraf": "^4.4.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "mongodb": "^5.1.0",
    "validator": "^13.9.0"
  },
  "engines": {
    "node": "19.x"
  }
}
