{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "#/*": ["*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/test/**"
  ]
}